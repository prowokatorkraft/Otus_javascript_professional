{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [ "ES2020" ],
    "types": [ "node" ],
    "typeRoots": [ "node_modules/@types" ],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [ "./**/*" ],
  "exclude": [ "node_modules", "dist" ]
}